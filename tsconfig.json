{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noErrorTruncation": true,
    "baseUrl": ".",
    "paths": {
      "@services/*": ["src/common/services/*"],
      "@utils/*": ["src/common/utils/*"],

      "@/common/*": ["src/common/*"],

      "@/tasks/*": ["src/pages/tasks/*"],
      "@/financing/*": ["src/pages/financing/*"]
    }
  },
  "files": ["src/mfe-toolkit.tsx"],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"]
}
