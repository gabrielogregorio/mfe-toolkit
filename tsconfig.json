{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noErrorTruncation": true,
    "baseUrl": ".",
    "paths": {
      "@services/*": ["src/common/services/*"],
      "@utils/*": ["src/common/utils/*"],
      "@pages/*": ["src/pages/*"]
    }
  },
  "files": ["src/mfe-mfe-daily-tasks.tsx"],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"]
}
